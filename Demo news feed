  <script>
    // Loader hide after page load
    window.addEventListener("load", () => {
      document.getElementById("loader").style.display = "none";
    });

    // Trending Filter Active Button
    const btns = document.querySelectorAll(".trending-btn");
    btns.forEach(btn => {
      btn.addEventListener("click", () => {
        btns.forEach(b => b.classList.remove("trending-active"));
        btn.classList.add("trending-active");
      });
    });
