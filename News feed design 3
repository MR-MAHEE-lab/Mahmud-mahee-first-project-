<script>
const newsContainer = document.getElementById('news-container');
const trendingTopicsContainer = document.getElementById('trending-topics-container');
const navLinks = document.querySelectorAll('nav a');
const loadingSpinner = document.getElementById('loading-spinner');

const allArticles = [
  { title: "দুর্গাপূজার প্রস্তুতি", description: "আসন্ন দুর্গাপূজা উপলক্ষে প্রধান উপদেষ্টা ড. মুহাম্মদ ইউনূসের পরামর্শে পর্যায়ক্রমে পরিদর্শনে আসলেন সনাতন ধর্মীয় নেতারা।", url: "#", urlToImage: "https://placehold.co/600x400/D97706/ffffff?text=Image+1", source:{name:"খবর Tv"}, time:"২ ঘন্টা আগে", category:["headlines","home","recent","ধর্ম"] },
  { title: "জুলাই সনদের ভিত্তিতে নির্বাচন", description: "দেশে চলমান রাজনৈতিক সংকট নিরসনের লক্ষ্যে জামায়াতের কর্মসূচি ঘোষণা।", url: "#", urlToImage: "https://placehold.co/600x400/92400E/ffffff?text=Image+2", source:{name:"খবর Tv"}, time:"২ ঘন্টা আগে", category:["headlines","home","recent","রাজনীতি"] },
  { title: "আটা (প্যাকেট)", description: "৫২-৫৫ টাকা (কেজি)", url: "#", urlToImage: "https://placehold.co/600x400/FACC15/ffffff?text=Flour", source:{name:"বাজার দর"}, time:null, category:["home","বাজার"] },
  { title: "সারাদেশে আজ মাঝারি থেকে ভারী বৃষ্টির সম্ভাবনা", description: "সারাদেশে আজ মাঝারি থেকে ভারী বৃষ্টির সম্ভাবনা।", url: "#", urlToImage: "https://placehold.co/600x400/FB923C/ffffff?text=Image+4", source:{name:"খবর Tv"}, time:"২ ঘন্টা আগে", category:["headlines","home","recent","আবহাওয়া"] },
  { title: "ইটভাটা বিক্ষোভ", description: "গ্রামের পরিবেশ ও জলবায়ু পরিবর্তনের দাবিতে তারা বিক্ষোভ করেছে।", url: "#", urlToImage: "https://placehold.co/600x400/8c7ae6/ffffff?text=Video+1", source:{name:"খবর Tv"}, time:"২ ঘন্টা আগে", category:["videos","home","ভিডিও"] },
  { title: "নদীতে মছনা মিলেছে", description: "নদীতে মছনা পাওয়া গেলে এলাকাবাসী পুলিশে খবর দেয়।", url: "#", urlToImage: "https://placehold.co/600x400/42a5f5/ffffff?text=Video+2", source:{name:"খবর Tv"}, time:"২ ঘন্টা আগে", category:["videos","home","ভিডিও"] },
];

const trendingTopics = [...new Set(allArticles.flatMap(a=>a.category).filter(c=>!["home","headlines","recent","videos"].includes(c)))];

function renderArticle(article){
  const isMarket = article.source?.name === "বাজার দর";
  const cardClass = isMarket ? 
    "flex items-center p-4 rounded-xl shadow-md transition-all duration-500 news-card" :
    "flex flex-col rounded-xl shadow-md transition-all duration-500 overflow-hidden group news-card";
  
  const contentHTML = isMarket ? `
    <img src="${article.urlToImage}" loading="lazy" alt="${article.title}" class="w-16 h-16 object-cover rounded-lg mr-4">
    <div class="flex-1">
      <h2 class="text-xl font-bold mb-1">${article.title}</h2>
      <p class="text-sm">${article.description}</p>
    </div>
  ` : `
    <div class="relative w-full overflow-hidden">
      <img src="${article.urlToImage || 'https://placehold.co/600x400/92400E/ffffff?text=No+Image'}" loading="lazy"
        alt="${article.title}" class="w-full object-cover transition-transform duration-700 ease-in-out group-hover:scale-105 rounded-t-xl">
      <div class="absolute bottom-2 left-2 bg-white text-gray-800 text-xs font-semibold px-2 py-1 rounded-full shadow">
        ${article.time || ''}
      </div>
      <div class="absolute top-2 right-2 bg-white w-8 h-8 rounded-full flex items-center justify-center shadow">
        <i class="fa-solid fa-thumbtack text-yellow-500"></i>
      </div>
    </div>
    <div class="p-4 flex-1 flex flex-col">
      <h2 class="text-xl font-bold mb-2">${article.title}</h2>
      <p class="text-sm flex-1 mb-4">${article.description}</p>
    </div>
  `;

  const card = document.createElement('a');
  card.href = article.url || '#';
  card.target = "_blank";
  card.rel = "noopener noreferrer";
  card.className = cardClass;
  card.innerHTML = contentHTML;
  newsContainer.appendChild(card);
}

function renderTrendingTopics(){
  trendingTopicsContainer.innerHTML="";
  trendingTopics.forEach(topic=>{
    const btn=document.createElement('span');
    btn.textContent=topic;
    btn.className="bg-gray-200 text-gray-800 text-sm font-medium px-3 py-1 rounded-full cursor-pointer hover:bg-yellow-200 transition-colors duration-200";
    btn.addEventListener('click', (e)=>{
      filterArticles(topic);
      trendingTopicsContainer.querySelectorAll('span').forEach(s=>s.classList.remove('trending-active'));
      e.target.classList.add('trending-active');
    });
    trendingTopicsContainer.appendChild(btn);
  });
}

function filterArticles(filter){
  newsContainer.innerHTML="";
  const filtered = filter === 'home' ? allArticles : allArticles.filter(a=>a.category.includes(filter));
  filtered.forEach(renderArticle);
  navLinks.forEach(link=>{
    if(link.dataset.filter===filter){
      link.classList.add('font-bold', 'text-yellow-700');
      link.classList.remove('text-white');
    } else {
      link.classList.remove('font-bold', 'text-yellow-700');
      link.classList.add('text-white');
    }
  });
}

navLinks.forEach(link=>link.addEventListener('click', e=>{
  e.preventDefault();
  filterArticles(e.currentTarget.dataset.filter);
}));

document.addEventListener('DOMContentLoaded', ()=>{
  renderTrendingTopics();
  filterArticles("home");

  setTimeout(() => {
    loadingSpinner.style.opacity = '0';
    setTimeout(() => {
      loadingSpinner.style.display = 'none';
    }, 500);
  }, 1000);
});
</script>

</body>
</html>
