      <div id="trending-topics-container" class="flex gap-2 overflow-x-auto px-2 py-1 scrollbar-hide"></div>
    </div>

    <div id="news-container" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 w-full"></div>
